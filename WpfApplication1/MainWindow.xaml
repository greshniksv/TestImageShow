<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="434.503" Width="659.617">

    <Grid x:Name="mainGrid" Margin="2,2,2,2">

        <ScrollViewer x:Name="MyScrollViewer" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" AllowDrop="True" Drop="MyScrollViewer_Drop" Background="#FFD8D8D8">
            <WrapPanel x:Name="wrapPanel"  Orientation="Horizontal"/>
        </ScrollViewer>

        <Grid x:Name="showImageGrid" Visibility="Hidden" Background="#33000000" VerticalAlignment="Top">
            <Canvas x:Name="fullSizeImage" Cursor="Hand" Background="#FF633030" Margin="20,20,80,20"/>
            <Button x:Name="btnNext" Content="Next" HorizontalAlignment="Right" Margin="0,76,10,0" VerticalAlignment="Top" Width="58"/>
            <Button x:Name="btnPrev" Content="Next" HorizontalAlignment="Right" Margin="0,302,10,0" VerticalAlignment="Top" Width="58"/>
            <Button x:Name="btnBloor" Content="Blur" HorizontalAlignment="Right" Margin="0,189,10,0" VerticalAlignment="Top" Width="58" Click="btnBloor_Click"/>
        </Grid>


    </Grid>
</Window>
